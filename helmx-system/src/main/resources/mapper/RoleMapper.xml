<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.helmx.tutorial.system.mapper.RoleMapper">

    <!-- 结果映射 -->
    <resultMap id="RoleResultMap" type="com.helmx.tutorial.system.entity.Role">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="code" column="code"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 根据用户ID查询角色 -->
    <select id="findRolesByUserId" parameterType="long" resultMap="RoleResultMap">
        SELECT r.*
        FROM tb_rbac_roles r
                 INNER JOIN tb_rbac_user_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>

    <!-- 根据角色ID查询菜单ID -->
    <select id="findMenuIdsByRoleId" parameterType="long" resultType="long">
        SELECT m.id
        FROM tb_rbac_menus m
                 INNER JOIN tb_rbac_role_menus rm ON m.id = rm.menu_id
        WHERE rm.role_id = #{roleId}
    </select>

    <!-- 根据角色ID查询菜单 -->
    <select id="findMenusByRoleId" parameterType="long" resultType="com.helmx.tutorial.system.entity.Menu">
        SELECT m.*
        FROM tb_rbac_menus m
                 INNER JOIN tb_rbac_role_menus rm ON m.id = rm.menu_id
        WHERE rm.role_id = #{roleId}
    </select>
    <!-- 带条件的角色查询（使用 RoleQueryRequest 对象） -->
    <select id="findRolesByConditions" parameterType="com.helmx.tutorial.system.dto.RoleQueryRequest" resultMap="RoleResultMap">
        SELECT * FROM tb_rbac_roles
        <where>
            <if test="criteria.name != null and criteria.name != ''">
                AND name LIKE CONCAT('%', #{criteria.name}, '%')
            </if>
            <if test="criteria.code != null and criteria.code != ''">
                AND code LIKE CONCAT('%', #{criteria.code}, '%')
            </if>
            <if test="criteria.id != null and criteria.id != 0">
                AND id = #{criteria.id}
            </if>
            <if test="criteria.remark != null and criteria.remark != ''">
                AND remark LIKE CONCAT('%', #{criteria.remark}, '%')
            </if>
            <if test="criteria.status != null">
                AND status = #{criteria.status}
            </if>
            <if test="criteria.startTime != null">
                AND created_at >= #{criteria.startTime}
            </if>
            <if test="criteria.endTime != null">
                AND created_at <![CDATA[ <= ]]> #{criteria.endTime}
            </if>
        </where>
        ORDER BY created_at DESC
    </select>
</mapper>
